{
    "name": "electron",
    "scripts": {
        "start": "pnpm run electron:static",
        "start:dev": "pnpm run electron:dev",
        "electron:static": "pnpm run build && pnpm run run-electron-static",
        "electron:dev": "pnpm run compile && concurrently --names=\"serve,electron\" --kill-others \"pnpm run serve\" \"pnpm run run-electron-dev\"",
        "build": "pnpm run compile && npm run pack",
        "run-electron-static": "cross-env EDITOR_HTML=../../electron/dist/index.html WORKER_HTML=../../electron/dist/worker.html ELECTRON_DISABLE_SECURITY_WARNINGS=true electron build/main.js",
        "run-electron-dev": "wait-on --interval 2000 http://localhost:8080 && cross-env EDITOR_HTML=http://localhost:8080/index.html WORKER_HTML=http://localhost:8080/worker.html ELECTRON_DISABLE_SECURITY_WARNINGS=true electron build/main.js",
        "clean": "rm -rf ./dist build tsconfig.tsbuildinfo",
        "compile": "tsc --incremental",
        "compile:watch": "tsc --incremental --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "serve": "webpack serve --config webpack.config.js",
        "pack": "webpack --config webpack.config.js",
        "s": "pnpm run start",
        "b": "pnpm run build",
        "c": "pnpm run compile",
        "cw": "pnpm run compile:watch",
        "sd": "pnpm run electron:dev",
        "t": "pnpm run test",
        "tw": "pnpm run test:watch"
    },
    "devDependencies": {
        "@types/minimist": "^1.2.2",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "28.1.6",
        "@types/node": "^16.11.7",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.13",
        "concurrently": "^7.0.0",
        "cross-env": "^7.0.3",
        "electron": "^17.1.1",
        "fs-extra": "^10.1.0",
        "jest": "28.1.3",
        "ts-jest": "28.0.7",
        "typescript": "^4.6.2",
        "wait-on": "6.0.1"
    },
    "dependencies": {
        "minimist": "^1.2.5",
        "@codecapers/fusion": "1.0.15",
        "@electron/remote": "^2.0.8",
        "model": "workspace:*",
        "storage": "workspace:*",
        "notebook-editor": "workspace:*",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "utils": "workspace:*"
    }
}