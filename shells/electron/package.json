{
    "name": "electron",
    "scripts": {
        "start": "pnpm run electron:static",
        "start:dev": "pnpm run electron:dev",
        "electron:static": "pnpm run build && pnpm run run-electron-static",
        "electron:dev": "pnpm run compile && concurrently --names=\"serve,electron\" --kill-others \"pnpm run serve\" \"pnpm run run-electron-dev\"",
        "build": "pnpm run compile && npm run pack",
        "run-electron-static": "cross-env ENTRY=../../electron/dist/index.html cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true electron build/main.js",
        "run-electron-dev": "cross-env ENTRY=http://localhost:8080/index.html cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true electron  build/main.js",
        "clean": "rm -rf ./dist build tsconfig.tsbuildinfo",
        "compile": "tsc --incremental",
        "compile:watch": "tsc --incremental --watch",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch --passWithNoTests",
        "serve": "webpack serve --config webpack.config.js",
        "pack": "webpack --config webpack.config.js",
        "s": "pnpm run start",
        "b": "pnpm run build",
        "c": "pnpm run compile",
        "cw": "pnpm run compile:watch",
        "sd": "pnpm run electron:dev",
        "t": "pnpm run test",
        "tw": "pnpm run test:watch"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^27.4.1",
        "@types/lodash": "^4.14.179",
        "@types/marked": "^4.0.3",
        "@types/node": "^16.11.7",
        "@types/react": "^17.0.39",
        "@types/react-beautiful-dnd": "^13.1.2",
        "@types/react-dom": "^17.0.13",
        "@types/uuid": "^8.3.4",
        "concurrently": "^7.0.0",
        "cross-env": "^7.0.3",
        "electron": "^17.1.1",
        "fs-extra": "^10.1.0",
        "jest": "^27.5.1",
        "msw": "^0.39.1",
        "ts-jest": "^27.1.3",
        "typescript": "^4.6.2"
    },
    "dependencies": {
        "@blueprintjs/core": "^3.10.0",
        "@blueprintjs/icons": "^3.4.0",
        "@codecapers/fusion": "1.0.15",
        "@electron/remote": "^2.0.8",
        "axios": "^0.18.1",
        "classnames": "^2.3.1",
        "humanize-duration": "^3.27.1",
        "lodash": "^4.17.21",
        "model": "workspace:*",
        "moment": "^2.29.1",
        "monaco-editor": "^0.32.1",
        "normalize.css": "^8.0.0",
        "notebook-editor": "workspace:*",
        "path-browserify": "^1.0.1",
        "re-resizable": "^6.9.9",
        "react": "^17.0.2",
        "react-beautiful-dnd": "^13.1.0",
        "react-dom": "^17.0.2",
        "react-markdown": "^8.0.3",
        "utils": "workspace:*",
        "uuid": "^8.3.2"
    }
}